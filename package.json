{
  "name": "react-native-ios-translate-tasks",
  "version": "1.1.7",
  "description": "SwiftUI Translate Tasks on React Native",
  "source": "./src/index.tsx",
  "main": "lib/commonjs/index.js",
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-ios-translate-tasks-example",
    "lint": "npx biome check .",
    "lint:fix": "npx biome check --write ./src",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "semantic-release"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "translate",
    "task",
    "tasks",
    "swiftui"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huextrat/react-native-ios-translate-tasks.git"
  },
  "author": "Hugo EXTRAT <extrat.h@gmail.com> (https://github.com/huextrat)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huextrat/react-native-ios-translate-tasks/issues"
  },
  "homepage": "https://github.com/huextrat/react-native-ios-translate-tasks#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/config-conventional": "19.8.1",
    "@react-native-community/cli": "17.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/react": "19.1.14",
    "commitlint": "19.8.1",
    "del-cli": "6.0.0",
    "husky": "9.1.7",
    "react": "19.1.0",
    "react-native": "0.81.1",
    "react-native-builder-bob": "0.40.13",
    "semantic-release": "24.2.9",
    "turbo": "2.5.8",
    "typescript": "5.9.2"
  },
  "resolutions": {
    "@types/react": "19.1.14"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": ">=0.76"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.10.3",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "codegen",
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "codegenConfig": {
    "name": "RNIOSTranslateTasksViewSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "com.iostranslatetasks"
    },
    "ios": {
      "componentProvider": {
        "IOSTranslateTasksView": "IOSTranslateTasksView"
      }
    },
    "includesGeneratedCode": true
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "fabric-view",
    "version": "0.48.3"
  }
}
